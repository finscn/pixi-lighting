{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "./src/"
        ],
        "exclude": [
        ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown",
        "./node_modules/@pixi/jsdoc-template/plugins/es6-fix"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        },
        "applicationName": "PixiJS Lighting",
        "systemName": "PixiJS Lighting",
        "footer": "",
        "copyright": "Copyright Â© 2015 Zijun Wei(finscn).",
        "linenums": true,
        "meta": {
            "title": "PIXI.lighting API Documentation",
            "description": "Documentation for pixi-lighting module",
            "keywords": "docs, documentation, pixi, pixijs, normal maps, light maps"
        }
    },
    "markdown": {
        "parser": "gfm",
        "hardwrap": false
    },
    "opts": {
        "encoding": "utf8",
        "recurse": true,
        "private": false,
        "lenient": true,
        "destination": "./docs",
        "template": "./node_modules/@pixi/jsdoc-template"

    }
}
